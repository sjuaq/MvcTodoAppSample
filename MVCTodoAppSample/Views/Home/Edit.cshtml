@using MVCTodoAppSample.Models
@{
    Layout = null;
    ViewBag.Title = "Update Task";
    Task taskItem = ViewBag.Task as Task;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>@ViewBag.Title</h2>
                <hr />
            </div>

            <div class="col-md-12">

                <form method="post" class="form-horizontal" action="/Home/Edit/@taskItem.Id">
                    <div class="form-group">
                        <label class="control-label col-md-2">Text : </label>
                        <div class="col-md-10">
                            @*<input type="text" name="tasktext" placeholder="enter task text" class="form-control" value="@taskItem.Text" maxlength="255" required />*@
                            @Html.TextBox("tasktext", taskItem.Text, new { placeholder = "enter task text", @class = "form-control", maxlength = "255", required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Date : </label>
                        <div class="col-md-10">
                            @*<input type="date" name="taskdate" placeholder="gg.aa.yyyy" class="form-control" value="@taskItem.Date.ToString("yyyy-MM-dd")" required />*@

                            @Html.TextBox("taskdate", taskItem.Date.ToString("yyyy-MM-dd"), new { placeholder = "gg.aa.yyyy", @class = "form-control", required = "required", type = "date" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Is Completed : </label>
                        <div class="col-md-10">
                            @Html.CheckBox("taskiscompleted", taskItem.IsCompleted)
                        </div>
                    </div>

                    <div class="form-group text-right">
                        <button type="submit" class="btn btn-success">
                            <span class="glyphicon glyphicon-floppy-saved"></span> Save
                        </button>
                        <a class="btn btn-default" href="/Home/List">Back to list!</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</body>
</html>
