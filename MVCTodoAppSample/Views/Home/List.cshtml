@using MVCTodoAppSample.Models
@{
    Layout = null;
    ViewBag.Title = "List";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h2>@ViewBag.Title</h2>
                <hr />
            </div>

            @*.col-md-12>a.btn>{Add New Task}*@
            <div class="col-md-12">
                <a href="/Home/Add" class="btn btn-success">
                    <span class="glyphicon glyphicon-plus"></span>
                    Add New Task
                </a>
                <hr />
            </div>

            @*.col-md-12>(h3>{List All Tasks})+ul.list-group>li.list-group-item*3>(a[href=#]*2>{button})+(span>lorem3)*@
            <div class="col-md-12">
                <h3>List All Tasks</h3>
                <ul class="list-group">
                    @foreach (Task item in ViewBag.TaskList)
                    {
                        string className = (item.IsCompleted) ? "completed" : "notcompleted";

                        <li class="list-group-item">
                            <a class="btn btn-xs btn-warning" href="/Home/Edit/@item.Id">
                                <span class="glyphicon glyphicon-edit"></span>
                            </a>
                            <a class="btn btn-xs btn-danger" href="/Home/Delete/@item.Id">
                                <span class="glyphicon glyphicon-trash"></span>
                            </a>
                            <span class="label label-info">@item.Date</span>
                            <span class="@className">@item.Text</span>
                        </li>
                    }
                </ul>
            </div>
            
        </div>
    </div>
</body>
</html>
